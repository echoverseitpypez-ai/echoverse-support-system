{
  "name": "echoverse-support-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "node --no-deprecation node_modules/concurrently/dist/bin/concurrently.js \"npm run react:client\" \"npm run dev:server\"",
    "react:client": "vite",
    "dev:server": "node -r dotenv/config server/index.js dotenv_config_path=config/.env.server.local",
    "start": "node server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "db:setup": "node ./scripts/run-sql.js ./db/schema.sql",
    "supabase:ping": "node ./scripts/ping-supabase.js",
    "admin:create": "node -r dotenv/config ./scripts/create-admin.js dotenv_config_path=config/.env.server.local",
    "migrate:teacher-role": "node ./scripts/migrate-teacher-role.js",
    "manage:teachers": "node ./scripts/manage-teachers.js"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.45.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "postgres": "^3.4.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.27.0",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.7",
    "pg": "^8.12.0",
    "vite": "^5.4.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001"
}
